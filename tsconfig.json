{
    "compilerOptions": {
        "module": "es6",
        "strictNullChecks": true,
        "moduleResolution": "node",
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "jsx": "react",
        "noUnusedParameters": true,
        "noUnusedLocals": true,
        "noImplicitAny": false,
        "target": "es5",
        "lib": ["dom", "es7"],
        "typeRoots": [
            "./typings",
            "./node_modules/@types"
        ]
    },
    "include": [
        "./src/**/*",
        "./typings",
        "components/**/*"
    ],
    "exclude": ["node_modules", "lib"]
}